{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["jest", "node"],
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "moduleDetection": "auto",
    "module": "ES2020",
    "target": "ES2020"
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/__tests__/**/*"
  ]
}
