{
  "name": "apparel-service-frontend",
  "private": true,
  "version": "0.1.0",
  "description": "React frontend for Spring Boot Apparel Service",
  "author": "Spring Framework Guru",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run generate-api",
    "build": "tsc -b && vite build",
    "build:prod": "NODE_ENV=production tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "cd .. && cd .. && cd .. && husky install src/main/frontend/.husky",
    "generate-api": "openapi --input ../../../openapi/openapi/openapi.yaml --output ./src/api --client axios",
    "watch-api": "nodemon --watch ../../../openapi --ext yaml --exec \"npm run generate-api\"",
    "dev:concurrent": "concurrently \"npm run dev\" \"cd ../../../ && ./mvnw spring-boot:run\"",
    "clean": "rimraf dist node_modules"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/postcss": "^4.1.10",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "openapi-typescript-codegen": "^0.27.0",
    "postcss": "^8.5.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.10",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.29.2",
    "ts-jest": "^29.1.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
